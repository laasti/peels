{
    "name": "laasti/peels",
    "description": "A HTTP message middleware stack (request to response) and a generic middleware stack (takes an input and generates an output).",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sonia Marquette",
            "email": "contact@nebulousweb.com",
            "homepage": "http://nebulousweb.com/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/laasti/peels/issues",
        "wiki": "https://github.com/laasti/peels/wiki"
    },
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "zendframework/zend-diactoros": "~1.3.3",
        "laasti/application": "dev-develop",
        "league/container": "~2.0.3"
    },
    "suggest": {
        "laasti/application": "A framework using Peels in its core"
    },
    "autoload": {
        "psr-4": {
            "Laasti\\Peels\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
